<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/menu_main"
    android:layout_width="300dp"
    android:layout_height="match_parent"
    android:background="@color/menubackcolor"
    android:divider="@drawable/underline"
    android:dividerPadding="2dp"
    android:orientation="vertical"
    android:showDividers="beginning|middle|end">

    <CheckBox
        android:id="@+id/menuchecked"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="8sp"
        android:text="@string/menututorial"
        android:textAlignment="viewStart" />

    <LinearLayout
        android:id="@+id/menu_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:background="@color/menucategoryback"
        android:divider="@drawable/backline"
        android:dividerPadding="5dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/menuBtn_home"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="2dp"
            android:layout_marginEnd="5dp"
            android:background="@color/nocolor"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/menu_home"
            tools:ignore="ContentDescription" />

        <ImageButton
            android:id="@+id/account_menuBtn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="2dp"
            android:layout_marginStart="15dp"
            android:background="@color/nocolor"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/menu_account"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:rotation="90"
            android:scaleX="200"
            app:srcCompat="@drawable/underline"
            tools:ignore="ContentDescription" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/cancel_menuBtn"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@color/nocolor"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/menu_cancel"
                tools:ignore="ContentDescription"
                tools:layout_editor_absoluteY="0dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:background="@color/menutextback"
        android:text="@string/apptest"
        android:textAlignment="viewStart"
        android:textSize="18sp" />

    <ScrollView
        android:id="@+id/menu_Scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/btn_View"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:background="@color/menucategoryback"
                android:divider="@drawable/underline"
                android:dividerPadding="2dp"
                android:orientation="vertical"
                android:showDividers="middle|end">

                <ImageButton
                    android:id="@+id/body_menuBtn"
                    android:layout_width="85dp"
                    android:layout_height="90dp"
                    android:layout_margin="5dp"
                    android:layout_marginStart="10dp"
                    android:background="@color/nocolor"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/menu_body"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    app:srcCompat="@drawable/underline"
                    tools:ignore="ContentDescription" />

                <ImageButton
                    android:id="@+id/follow_menuBtn"
                    android:layout_width="85dp"
                    android:layout_height="90dp"
                    android:layout_margin="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginStart="10dp"
                    android:background="@color/nocolor"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/menu_follow"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    app:srcCompat="@drawable/underline"
                    tools:ignore="ContentDescription" />

                <ImageButton
                    android:id="@+id/food_menuBtn"
                    android:layout_width="85dp"
                    android:layout_height="90dp"
                    android:layout_margin="5dp"
                    android:layout_marginStart="10dp"
                    android:background="@color/nocolor"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/menu_food"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    app:srcCompat="@drawable/underline"
                    tools:ignore="ContentDescription" />

                <ImageButton
                    android:id="@+id/writer_menuBtn"
                    android:layout_width="85dp"
                    android:layout_height="90dp"
                    android:layout_margin="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginStart="10dp"
                    android:background="@color/nocolor"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/menu_writer"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    app:srcCompat="@drawable/underline"
                    tools:ignore="ContentDescription" />

                <ImageButton
                    android:id="@+id/qna_Btn"
                    android:layout_width="85dp"
                    android:layout_height="90dp"
                    android:layout_margin="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginStart="10dp"
                    android:background="@color/nocolor"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/menu_qna"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    app:srcCompat="@drawable/underline"
                    tools:ignore="ContentDescription" />
            </LinearLayout>

            <ListView
                android:id="@+id/menu_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignBottom="@+id/btn_View"
                android:layout_alignTop="@+id/btn_View"
                android:layout_marginStart="3dp"
                android:layout_toEndOf="@+id/btn_View"
                android:divider="@drawable/underline"
                android:dividerHeight="5dp"
                tools:ignore="NestedScrolling"
                tools:listfooter="@drawable/underline"
                tools:listitem="@layout/menulistitem" />

        </RelativeLayout>
    </ScrollView>

</LinearLayout>